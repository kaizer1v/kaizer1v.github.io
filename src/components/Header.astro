---
import Nav from './Nav.astro'

export interface Props {
  title: string;
  description: string;
  permalink: string;
}

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  img.logo {
    display: block;
    width: 75px;
  }
</style>


<header>
  <a href="/">
    <img class="logo" alt="Blog Logo" src="/assets/logo.webp" width="75" height="50">
  </a>

  <Nav current={current} />
</header>
