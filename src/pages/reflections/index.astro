---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Reflections';
const description = 'thoughts and reflections.';
const permalink = `${Astro.site.href}reflections`;

let allPosts = await Astro.glob('../../data/reflections/*.{md,mdx}')
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<BaseLayout title={title} description={description} permalink={permalink} current="reflections">
  <div class="container">
    {allPosts.map((post, index) => {
      const href = `/reflections/${post.file.split('/').pop().split('.').shift()}`;
      return (
        <div>
          { index !== 0 && <hr /> }
          <div class="post-item">
            <h2>
              <a href={href}>{post.frontmatter.title}</a>
            </h2>
            <p>{post.frontmatter.description}</p>
            {/* <div class="post-item-footer">
              <span class="post-item-date">â€” {post.frontmatter.publishDate}</span>
            </div> */}
          </div>
        </div>
      )
    })}
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-serif);
    font-weight: 700;
  }

  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  hr {
    margin: 2rem auto;
  }
</style>